.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user
      = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__group
          = link_to "#" do
            = icon('fas', 'edit')
        %li.side-header__box__menu__edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

